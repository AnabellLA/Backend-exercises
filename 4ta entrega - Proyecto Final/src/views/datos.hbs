<div class="container text-center my-3">
    <div class="jumbotron" style="background-color: green;color: white;">
        <h1>BIENVENIDO!</h1>
        <img width="50" src={{avatar}} alt="not found">
        <h2><i>Usuario: {{name}}</i></h2>
        <h3>Con correo: {{username}}</h3>
        <button class="btn btn-danger my-5" onclick="location.href='/logout'">LOGOUT</button>
        <button class="btn btn-danger my-5" onclick="location.href='/chat'">CHATEAR</button>
    </div>
    <br>
    <div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>
    {{#if hayProductos}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>S/ {{this.precio}}</td>
                <td><img width="50" src={{this.url}} alt="not found"></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
</div>