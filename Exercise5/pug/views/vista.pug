div(class="row")
    div(class="col")
        h1 Lista de Productos
hr(class="col-3 col-md-2 mb-5")
div(class="row justify-content-center")
    div(class="col")
        if hayProductos
            table(class="table table-striped table-hover")
                thead   
                    tr 
                        th(scope="col") N°
                        th(scope="col") Título
                        th(scope="col") Precio
                        th(scope="col") Miniatura
                tbody 
                    each producto in productos 
                        tr
                            th(scope="row")=producto.id
                            td #{producto.title}
                            td S/ #{producto.price}
                            th(scope="row")
                                img(width="15%" src=producto.thumbnail)
        else
            h3 No hay productos almacenados